#encoding: utf-8
<%= form_for(@note) do |f|%>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.label :title, "标题"%>
		<%= f.text_field :title, :style=> "width: 280px"%>
		<%= f.label :content, "内容"%>
		<%= f.text_area :content, placeholder: "帖子内容", :style => "width: 280px"%>
	</div>
	<%= f.submit "发贴", class: "btn btn-primary"%>
<% end %>
