<legend class="text-center">编辑评论内容</legend>
<div class="row">
	<div class="span6 offset3">
		<div class="form-horizontal">
			<%= form_for(@comment)  do |f|%>
				<div class="control-group">
					<div class="controls">
						<%= f.text_area :content,placeholder: "评论内容不可以为空"%>
					 </div>
				</div><br /><br />
				<div class="offset2">
					<%= f.submit "提交评论",class: "btn btn-primary"%>
				</div>	
			<% end %>
		</div>
	</div>
</div>
