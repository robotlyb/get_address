<h3>
	<% if flash[:notice]%>
	<%= flash[:notice]%>
	<% end %>
</h3>
<div class="row">
	<aside class="span6">
		<section>
			<h3>
				<% if flash[:notice]%>
				<%= flash[:notice]%>
				<% end %>
				<% if flash[:success]%>
				<%= flash[:success]%>
				<% end %>
			</h3>
			<h1>
				<%= gravatar_for @user%><br />
				<%=@user.name%><br />
			</h1>
		</section>
	</aside>
	<div class="span8">
		<% if @user.notes.any? %>
			<h3>帖子<%= @user.notes.count%></h3>
			<%= will_paginate @notes%>
			<ol class="notes">
				<%= render @notes%>
			</ol>
			<%= will_paginate @notes%>
		<% end %>	
	</div>
</div>
