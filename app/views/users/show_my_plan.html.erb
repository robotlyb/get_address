<legend class="text-left">我分享的方案</legend>
<div class="row">
		<% if @plan%>
			<%= will_paginate @plan%>
			<ul>
				<% @plan.each do |plan| %>
						<li>
							<span><%= link_to plan.title,plan%></span><br />
							<span class="timestamp">
								分享于<%= time_ago_in_words(plan.created_at)%>之前,共有<%= plan.comments.count%>个评论
							</span>
						</li>
						<span class="offset1">
							用户评分：<%= plan.avarage_score%>
						</span>
						<br /><br />

				 <% end%>
				
			</ul>
			<%= will_paginate @plan%>
		<% else %>
			<%= "你还没有任何分享。。"%>
		<% end %>
		
	</div>

