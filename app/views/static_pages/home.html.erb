<% if signed_in? %>
	<% if flash[:notice]%>
		<%= flash[:notice]%>
	<% end %>	
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info'%>
			</section>
			<section>
				<%= link_to "我要提问", ask_question_path%>
			</section>
			<section>
				<%= link_to "我要分享",share_plan_path%>
			</section>
			<section>
				<%= link_to "看看大家都在问什么？", questions_show_path%>
		
			</section>
				
			<section>
				<%= link_to "看看达人们的分享", show_all_plans_path%>
			</section>
		</aside>
			
		<div class="text-right">
		<div class="form-search">
		<%= form_for(@search) do |f|%>
			<%= f.text_field :key, class: "input-medium search-query", placeholder: "按关键字搜索方案"%>
			<%= f.submit "搜索",class: "btn btn-info"%>	
		<% end%>
		</div>
		</div>	 
	</div>
	<legend class="text-center">达人们的分享</legend>		
	<div class="text-center">
			<%all_plan.each do |plan|%>
				<%= link_to plan.title,plan%><br />
				 <span class="timestamp offset3">
				 
					<%= plan.user.name%>分享于<%= time_ago_in_words(plan.created_at)%>之前
				 <span><br /><br />
				 
			<% end%>	
		<!% else%>
				<!%= 还没有人分享。。%>
		<!%end%>
	</div>		
<% else %>

	<div class="center hero-unit">
		<h1>欢迎来到穿衣利器论坛！</h1>
		<h2>想成为穿衣达人？不知道怎么穿衣搭配？这里有资深的达人为你解决穿衣的烦恼！</h2>
		<%= link_to "加入论坛",signup_path, class: "btn btn-large btn-info"%>
	</div>
<% end %>		
