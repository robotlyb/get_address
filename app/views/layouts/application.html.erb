#encoding: utf-8
<!DOCTYPE html>
<html>
<head>
  <title>穿衣利器论坛</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header class="navbar navbar-fixed-top navbar-inverse">
		<div class="navbar-inner">
			<div class="container">
				<%= link_to "穿衣利器",root_path,id:"logo"%>
				<nav>
					<ul class="nav pull-right">
						<li><%= link_to "主页", root_path%></li>
						<li><%= link_to "帮助", help_path%></li>
						<% if signed_in? %>
								<li id="fat-menu" class="dropdown">
									<a href="#" class="dropdown-toggle" data-toggle="dropdown">
										<%= current_user.name%><b class="caret"></b>
									</a>
									<ul class="dropdown-menu">
										<li><%= link_to "查看账户", current_user%></li>
										<li><%= link_to "设置", edit_user_path(current_user)%></li>
										<li class="divider"></li>
										<li>
											<%= link_to "退出登录",signout_path,method: "delete"%>
										</li>
									</ul>
								</li>
								<li id="fat-menu" class="dropdown">
									<a href="#" class="dropdown-toggle" data-toggle="dropdown">网站导航<b class="caret"></b></a>
									<ul class="dropdown-menu">
										<li><%= link_to "我的分享", myplan_path%></li>
										<li><%= link_to "我的问题", myquestion_path%></li>
										<li><%= link_to "达人们的分享",show_all_plans_path%></li>
										<li><%= link_to "大家的问题",questions_show_path%></li>
										<li class="divider"></li>
										<li><%= link_to "我要提问",ask_question_path%></li>
										<li><%= link_to "我要分享",share_plan_path%></li>
									</ul>
								</li>
						<% else %>		
							<li><%= link_to "登录", signin_path%></li>	
						<% end %>	
					</ul>
				</nav>
			</div>
		</div>

	</header>
	<div class="container">
		<%= yield %>
	</div>
	<footer class="footer">
		<!small>
		<div class="text-center">
			<a href="localhost:3000">穿衣利器论坛</a>由<a href="#">startx</a>发起
		</div>
		<!/small>
		<nav>
			<ul>
				<%= link_to "关于我们",about_path%>
				<%= link_to "联系我们", contact_path%>
			</ul>
		</nav>
	</footer>
</body>
</html>
