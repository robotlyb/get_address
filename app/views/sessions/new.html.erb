#encoding: utf-8
<legend class=text-center>用户登录</legend>
<div class="row">
	<div class="span6 offset3">
		<% if flash[:error] %>
		<h5>	<%= flash[:error]%></h5>
		<% end %>	
		<% if flash[:notice]%>
			<%= flash[:notice]%>
		<% end %>
		
		<div class="form-horizontal">
	
			<%= form_for(:session, url: sessions_path) do |f|%>
			
			<div class="control-group">
				<%=	f.label :email, "邮箱", class: "control-label" %>
				<div class="controls">
					<%= f.text_field :email, :style => "width: 150px",placeholder: "输入邮箱" %>
				</div>
			</div>
			
			<div class="control-group">
				 <%= f.label :password, "密码", class: "control-label" %>
					<div class="controls">
						<%= f.password_field :password, :style => "width: 150px", placeholder: "输入密码"%>
					</div>
			</div>		
			<br />
			<div class="text-center">
				<%= f.submit "点击登录", class: "btn btn-info"%>
			</div>
	

			<% end %>
		</div>
		<div class="text-center">			
			<h5>新用户？<%= link_to "立即注册！", signup_path%></h5>
		</div>
		</div>	
	</div>
</div>

